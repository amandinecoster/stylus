     <div id="banner">
       <div class="container">
         <div class="row">
           <div class="col-xs-12">
             <h1>Stylus.es</h1>
             <p>Turn your pen into you best friend Make every line you write count..</p>
             <a href="#" class="btn btn-success btn-lg">Get your stylus</a>
           </div>
         </div>
       </div>
     </div>

     <div class="bg-purple padded">
       <div class="container text-center">
         <div class="row">
           <div class="col-xs-12 col-sm-6 col-md-3">
             <div class="card">
              <%= image_tag "paper.svg"%>
               <h2>Natural writing</h2>
               <p>Don't change your habits, write with a pen on
               <strong>paper notebooks</strong></p>
             </div>
           </div>
           <div class="col-xs-12 col-sm-6 col-md-3">
             <div class="card">
              <%= image_tag "computer.svg"%>
               <h2>Sync. copy</h2>
               <p>Stylus instantaneously copy your text on your computer,
               <strong>in real-time</strong></p>
             </div>
           </div>
           <div class="col-xs-12 col-sm-6 col-md-3">
             <div class="card">
              <%= image_tag "analytics.svg"%>
               <h2>Analytics</h2>
               <p>Get feedbacks on the way you write,
               <strong>your favorite words, your frequent mistakes</strong></p>
             </div>
           </div>
            <div class="col-xs-12 col-sm-6 col-md-3">
             <div class="card">
              <%= image_tag "data.svg"%>
               <h2>Storing your texts</h2>
               <p>Everything line writen with your stylus is stored in the cloud, so that
               <strong>it's never lost</strong></p>
             </div>
           </div>
       </div>
     </div>
   </div>

   <div id="news-letter" class="padded">
     <div class="container text-center">
       <div class="row">
         <div class="col-xs-12">
           <h2>Get news from stylus</h2>
           <p>Leave us your mail and get stylus news</p>
           <form action="" class="form-inline">
             <input type="email" class="form-control" placeholder="Ecris ton email!">
             <input type="submit" value="Subscribe" class="btn btn-success">
           </form>
         </div>
       </div>
     </div>
   </div>

   <div id="testimonials" class="bg-green padded">
    <div class="container text-center">
      <div class="row">
        <% data.testimonials.each do |testimonial| %>
        <div class="col-xs-12 col-sm-6">
          <div class="testimonial">
              <%= image_tag testimonial.image_file, class: "img-circle" %>
              <h2> <%= testimonial.name %> </h2>
              <p> <%= testimonial.content %> </p>
          </div>
        </div>
        <% end %>
      </div>
    </div>
   </div>

